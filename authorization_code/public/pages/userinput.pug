  body#wrapper
    .container
      .row
        .col-md-6.col-md-offset-3
          .login-panel.panel.panel-default
            .panel-heading
                h3.panel-title Select What You Want To Import
            .panel-body
              form(action='/userinput')
                input(type="checkbox", name="top_songs", value="top_songs") 
                |  Your Top 50 Tracks 
                br
                input(type="checkbox", name="saved_songs", value="saved_songs") 
                |  Your Saved Songs
                ul
                div.form-group
                    each val in playlists
                      div.checkbox-inline
                        input.checkbox-input(type='checkbox', name=`playlists[0]`, value=val, id=`create-shift-${val}`)
                        label(for=`create-shift-${val}`)=val
                center
                  button.btn.btn-info.btn-lg.btn-block(name='submit', type='submit', value='submit') Submit


  script(src='../vendor/jquery/jquery.min.js')
